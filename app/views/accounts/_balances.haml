%table{border: 1, cellpadding: 2, cellspacing: 0}
  %tr
    %td Balance:
    %td= number_to_currency @current_month.balance + @current_month.start_amount
    %td Cleared balance:
    %td= number_to_currency @current_month.cleared_balance + @current_month.start_amount
  %tr
    %td Beginning balance:
    %td= number_to_currency @current_month.start_amount
    %td Ending balance:
    %td= number_to_currency @current_month.start_amount
  %tr
    %td{colspan: 2}= link_to 'Edit month', edit_month_path(@current_month)
    %td{colspan: 2}= link_to 'Delete month', month_path(@current_month), method: :delete
